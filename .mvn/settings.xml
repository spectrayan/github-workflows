<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
  <!-- Global mirrors and repositories can be configured here. -->

  <servers>
    <!-- Example private repository server with placeholders. The reusable workflow can inject secrets here. -->
    <server>
      <id>central</id>
      <username>__SERVER_USERNAME__</username>
      <password>__SERVER_PASSWORD__</password>
    </server>
  </servers>

  <profiles>
    <profile>
      <id>ci-defaults</id>
      <properties>
        <!-- Speed up snapshot updates in CI -->
        <maven.wagon.http.pool>false</maven.wagon.http.pool>
          <altSnapshotDeploymentRepository>
              snapshots-repo::default::https://central.sonatype.com/repository/maven-snapshots/
          </altSnapshotDeploymentRepository>
          <altDeploymentRepository>
              releases-repo::default::https://central.sonatype.com/repository/maven-releases/
          </altDeploymentRepository>
      </properties>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>ci-defaults</activeProfile>
  </activeProfiles>
</settings>
